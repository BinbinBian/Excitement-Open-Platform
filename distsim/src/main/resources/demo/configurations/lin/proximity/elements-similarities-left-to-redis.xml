<?xml version="1.0"?>

<!--A configuration file for the program eu.excitementproject.eop.distsim.builders.storage.SimilarityFile2Redis, which import a file-based representation of elements' similarities to a Redis database -->
<configuration>

<module name="logging"> <!--Defines the log4j properties -->
	<!--the path of the log4j properties file-->
	<param name="properties-file">configurations/log4j.properties</param> 
</module>

<module name="file-to-redis"> <!-- Defines the process of converting a general eu.excitementproject.eop.distsim.storage.File device to eu.excitementproject.eop.distsim.storage.Redis-->

	  <!--Defines the specific type of the eu.excitementproject.eop.distsim.storage.File input (can be one of its subclasses)-->
            <param name="class">eu.excitementproject.eop.distsim.storage.IdLinkedIntDoubleMapFile</param>
	    
	    <!--The path of the similarity input file-->
  	  <param name="file">models/lin/proximity/elements-similarities-left</param>
	  
	  <!-- The path to the elements file-->
	  <param name="elements-file">models/lin/proximity/elements</param>
	  
	  <!-- A path to a new generated redis file-->
	<param name="redis-file">models/lin/proximity/similarity-l2r.rdb</param>
	
</module>
</configuration>

